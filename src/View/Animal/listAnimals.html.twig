{% extends "/layout.html.twig" %}

{% block title %}Liste des animaux
{% endblock %}

{% block content %}

	<h1 class="h1 fw-bold text-center my-5 text-secondary">{{'Choisissez votre animal'|upper}}</h1>
	<div class="container containerAnimal rounded pt-3 pb-5 bg-white">

		{% for animal in animals %}
			<div class="row mx-3 rowAnimal bg-danger rounded mt-3">
				<div class="col d-flex"><img class="my-2 me-4 rounded" src="/assets/images/lama.jpeg" alt=""><div class="col align-self-center fw-bold display-4">{{ animal.name|upper }}</div>
				</div>
				<div class="col flex-wrap mt-5 fw-bold fs-3 ms-5">VITESSE :<div class="mt-2">TEMPS :</div>
					<div class="mt-2">PRIX :</div>
				</div>
				<div class="col flex-wrap mt-5 fw-bold fs-3">{{ animal.characteristics }}
					KM/H
					<div class="mt-2">30 Heures</div>
					<div class="mt-2">3000 â‚¬</div>
				</div>
				<div class="col-2 rounded-end bg-white m-1">
					<form action="" method="post">
						<input type="hidden" name="time" value="{{ animal.time }}">
						<button class="position-relative top-50 start-50 translate-middle fw-bold text-center fs-2" type="submit" ">Ajouter</button>
					</form>
				</div>
				<span>{{ animal.speed }}</span>
				<span>{{ animal.time }}</span>
				<span>{{ distance }}</span>
			</div>
		{% endfor %}
	{% endblock %}
