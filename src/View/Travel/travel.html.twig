{% extends 'layout.html.twig' %}

{% block content %}
	<div class="travel-section container">
		<div class="row travelRow justify-content-center align-items-center">
			<h1 class="h1 fw-bold text-secondary mt-5 m-4">Itinéraire :</h1>
			<div class="col-md-6">
				<form action="" method="post" class="d-flex flex-column">
					<div class="mb-4">
						<label for="" class="form-label labelForm">Adresse de départ</label>
						<input type="text" class="form-control form-control-lg" name="adress1" placeholder="1 rue de l'aube" required>
					</div>
					<div class="mb-4">
						<label for="" class="form-label labelForm">Code postal de départ</label>
						<input type="number" class="form-control form-control-lg" name="post-code1" placeholder="45160" required>
					</div>
					<div class="mb-4">
						<label for="" class="form-label labelForm">Adresse d'arrivée</label>
						<input type="text" class="form-control form-control-lg" name="adress2" placeholder="20 rue de l'arrivée" required>
					</div>
					<div class="mb-4">
						<label for="" class="form-label labelForm">Code postal d'arrivée</label>
						<input type="number" class="form-control form-control-lg" name="post-code2" placeholder="69800" required>
					</div>
					<button id="submit-and-load" type="submit" class="btn btn-lg btn-light btnForm text-secondary fw-bold">Valider</button>
					<a href="/" class="btn btn-lg btn-light mt-3 mb-5 text-secondary fw-bold">Retour</a>
				</form>
			</div>
			<div class="col-md-6">
				<div class="bloc-map">
					<img src="/assets/images/panda-bambou.png" class="w-100 h-100 imgForm" alt="photo de panda">
				</div>
			</div>
		</div>
	</div>
{% endblock %}
